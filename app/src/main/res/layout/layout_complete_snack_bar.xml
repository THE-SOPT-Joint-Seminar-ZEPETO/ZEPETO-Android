<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_fill_white_radius_8">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_check"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginVertical="7dp"
            android:layout_marginStart="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="check_lottie_green.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete_kr"
            android:textAppearance="@style/text_style_15"
            app:layout_constraintBottom_toBottomOf="@id/lottie_check"
            app:layout_constraintStart_toEndOf="@id/lottie_check"
            app:layout_constraintTop_toTopOf="@id/lottie_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>